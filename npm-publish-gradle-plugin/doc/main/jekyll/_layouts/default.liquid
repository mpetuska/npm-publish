<!DOCTYPE html>
<html lang="{{ site.lang | default: "en-US" }}">
<head>
  <meta charset='utf-8'>
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="{{ '/assets/css/style.css?v=' | append: site.github.build_revision | relative_url }}">
  {% include head-custom.html %}

  {% seo %}
  <script type="text/javascript" defer src="{{ '/assets/js/sidebar.js' | relative_url }}"></script>
</head>

<body>
<header>
  <div class="container">
    <a id="a-title" href="{{ '/' | relative_url }}">
      <h1>{{ site.title | default: site.github.repository_name }}</h1>
    </a>
    <h2>{{ site.description | default: site.github.project_tagline }}</h2>

    <section id="downloads">
      {% if site.show_downloads %}
        <a href="{{ site.github.zip_url }}" class="btn">Download as .zip</a>
        <a href="{{ site.github.tar_url }}" class="btn">Download as .tar.gz</a>
      {% endif %}
      <a href="{{ site.github.repository_url }}" class="btn btn-github"><span class="icon"></span>View on GitHub</a>
      {% assign _proc-url = page.url | remove_first: '/gen/' %}
      {% if _proc-url == page.url %}
        <a href="{{ site.github.repository_url }}/tree/master/doc/main/{{ page.path }}" class="btn btn-github"><span
            class="icon"></span>Edit on GitHub</a>
      {% endif %}
    </section>

    <nav class="sidebar">
      {% assign menu = site.menus.header %}
      {% include menu.html %}
    </nav>
  </div>
</header>

<div class="container">
  <section id="main_content">
    {{ content }}
  </section>
</div>
</body>
</html>
